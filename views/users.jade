extends layout

block content
  .container
    h1 Users
    div(class="userContainer")
      each user in users 
        div(class='userBox')
          h2 Username: #{user.Username}
          div First Name: #{user.FirstName}
          div Last Name: #{user.LastName}
          div Password: #{user.Password}
          div Email: #{user.Email}
          div
            strong Role:
            if user.Role
              span(class="role-badge role-" + user.Role)= user.Role.toUpperCase()
            else
              span Unknown Role 

          div
            if user.Enabled === 0
              span(class='disabled-label') Account Disabled
              a(href='/a/enable/' + user.UserID) Enable
            else
              a(href='/a/disable/' + user.UserID) Disable

          div
            a(href='/a/delete/' + user.UserID) Remove

          div
            if isAdmin
              if user.Role !== 'admin'
                a(href='/a/promote/' + user.UserID) Promote
              if user.Role !== 'user'
                a(href='/a/demote/' + user.UserID) Demote


