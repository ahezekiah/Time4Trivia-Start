extends layout

block content
    .container
        h1 Time 4 Trivia!
        
        if lastAnswer
            .alert(class=lastAnswer.wasCorrect ? 'alert-success' : 'alert-danger')
                if lastAnswer.wasCorrect
                    strong Correct! 
                    | Great job!
                else
                    strong Incorrect! 
                    | The correct answer was: #{lastAnswer.correctAnswer}
        
        if currentQuestion
            .game-container
                .progress-bar
                    .progress-info
                        span Question #{currentIndex + 1} of #{totalQuestions}
                        span.score Score: #{score}/#{currentIndex}
                    .progress-visual
                        .progress-fill(style=`width: ${((currentIndex) / totalQuestions) * 100}%`)
                
                .question-container
                    h2.question-text #{currentQuestion.questionText}
                    
                    if currentQuestion.category
                        .category-badge
                            span Category: #{currentQuestion.category}
                            span.difficulty Difficulty: #{currentQuestion.difficulty}
                
                form(method='POST', action='/game/answer')
                    input(type='hidden', name='questionId', value=currentQuestion.questionId)
                    .answers-container
                        each answer, index in currentQuestion.getShuffledAnswers()
                            .answer-option
                                input(type='radio', name='answer', value=answer, id=`answer${index}`, required)
                                label(for=`answer${index}`) #{answer}
                    
                    .submit-container
                        button.btn.btn-primary(type='submit') Submit Answer
        else
            .no-questions
                h2 No questions available
                p Please try again later.
                a.btn.btn-secondary(href='/') Back to Home

    style.
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .game-container {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 30px;
            margin-top: 20px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        
        .progress-bar {
            margin-bottom: 30px;
        }
        
        .progress-info {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
            font-weight: bold;
            color: #333;
        }
        
        .progress-visual {
            width: 100%;
            height: 10px;
            background-color: #e0e0e0;
            border-radius: 5px;
            overflow: hidden;
        }
        
        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #4CAF50, #45a049);
            transition: width 0.3s ease;
        }
        
        .question-container {
            margin-bottom: 30px;
        }
        
        .question-text {
            font-size: 1.5em;
            color: #2c3e50;
            margin-bottom: 20px;
            line-height: 1.4;
        }
        
        .category-badge {
            display: flex;
            gap: 15px;
            margin-bottom: 20px;
        }
        
        .category-badge span {
            background: #e3f2fd;
            color: #1976d2;
            padding: 5px 10px;
            border-radius: 15px;
            font-size: 0.9em;
            font-weight: 500;
        }
        
        .difficulty {
            background: #fff3e0 !important;
            color: #f57c00 !important;
        }
        
        .answers-container {
            margin-bottom: 30px;
        }
        
        .answer-option {
            margin-bottom: 15px;
            padding: 15px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            transition: all 0.2s ease;
            cursor: pointer;
        }
        
        .answer-option:hover {
            border-color: #2196F3;
            background-color: #f5f5f5;
        }
        
        .answer-option input[type="radio"] {
            margin-right: 10px;
            transform: scale(1.2);
        }
        
        .answer-option label {
            cursor: pointer;
            font-size: 1.1em;
            margin: 0;
            width: 100%;
            display: block;
        }
        
        .answer-option input[type="radio"]:checked + label {
            font-weight: 600;
            color: #2196F3;
        }
        
        .submit-container {
            text-align: center;
        }
        
        .btn {
            padding: 12px 30px;
            font-size: 1.1em;
            border-radius: 6px;
            border: none;
            cursor: pointer;
            transition: background-color 0.2s ease;
        }
        
        .btn-primary {
            background-color: #2196F3;
            color: white;
        }
        
        .btn-primary:hover {
            background-color: #1976D2;
        }
        
        .btn-secondary {
            background-color: #6c757d;
            color: white;
            text-decoration: none;
        }
        
        .btn-secondary:hover {
            background-color: #545b62;
        }
        
        .alert {
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 4px;
            font-size: 1.1em;
        }
        
        .alert-success {
            background-color: #d4edda;
            border: 1px solid #c3e6cb;
            color: #155724;
        }
        
        .alert-danger {
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            color: #721c24;
        }
        
        .no-questions {
            text-align: center;
            padding: 40px;
            background: #f8f9fa;
            border-radius: 10px;
            margin-top: 20px;
        }