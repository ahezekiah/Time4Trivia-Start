extends layout

block content
  .container
    h1= title
    p Welcome to #{title}

    if user
      p You are logged in as: #{user.username}

      - var roleMap = { 'A': 'Admin', 'P': 'Player', 'T': 'Tester' }
      strong Role:
      if user.roles && user.roles.length > 0
        - var code = user.roles[0]
        - var roleClass = 'role-' + code.toLowerCase()
        - var roleLabel = roleMap[code] || code
        span(class='role-badge ' + roleClass)= roleLabel
      else
        span Unknown


    else
      p Please #[a(href="/u/login") Login] to play

