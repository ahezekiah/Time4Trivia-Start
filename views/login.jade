extends layout

block content
    .container
        h1 Login
        if error != ''
            label(class='error') #{error}
        form(action='login', method='post')
            label Username:
            input(type='text', name='username')
            br
            label Password:
            input(type='password', name='password')
            br
            input(type='submit', value='Login')
        h2 Don't have an account?
        a(href='/u/register') Register Here